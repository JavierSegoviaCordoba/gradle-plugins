{
  extends: [
    'github>JavierSegoviaCordoba/reusable-workflows//.github/renovate-reusable.json',
  ],
  gradle: {
    ignorePaths: [
      '**/test/**',
      '**/testFixtures/**',
      '**/testFunctional/**',
      '**/testIntegration/**',
      '**/*Test/**',
      '**/test*/**',
    ],
  },
  packageRules: [
    {
      matchUpdateTypes: [
        'major',
        'minor',
        'patch',
      ],
      groupName: 'all dependencies',
      minimumReleaseAge: '6 hours',
      matchPackageNames: [
        '*',
      ],
    },
    {
      groupName: 'Sqldelight',
      minimumReleaseAge: '6 hours',
      matchPackageNames: [
        'app.cash.sqldelight',
      ],
    },
    {
      groupName: 'Kotlin, Compose Compiler, and molecule',
      minimumReleaseAge: '6 hours',
      matchPackageNames: [
        'androidx.compose.compiler',
        'app.cash.molecule',
        'com.javiersc.kotlin.*',
        'org.jetbrains.compose.compiler',
        'org.jetbrains.kotlin.*',
        'org.jetbrains.kotlin:kotlin.*',
      ],
    },
    {
      groupName: 'Hubdle',
      minimumReleaseAge: '6 hours',
      matchPackageNames: [
        'com.javiersc.hubdle',
        'com.javiersc.hubdle:hubdle',
      ],
    },
  ],
  prConcurrentLimit: 2,
}
