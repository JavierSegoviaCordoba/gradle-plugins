{
  "extends": [
    "github>JavierSegoviaCordoba/reusable-workflows//.github/renovate-reusable.json"
  ],
  "gradle": {
    "ignorePaths": [
      "**/test/**",
      "**/testFixtures/**",
      "**/testFunctional/**",
      "**/testIntegration/**",
      "**/*Test/**",
      "**/test*/**"
    ]
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "androidx.compose.compiler:compiler",
        "org.jetbrains.kotlin:",
        "org.jetbrains.kotlin."
      ],
      "groupName": "Compose Compiler and Kotlin"
    },
    {
      "matchPackagePatterns": [
        "org.jetbrains.kotlinx:kotlinx-coroutines"
      ],
      "groupName": "org.jetbrains.kotlinx:kotlinx-coroutines"
    },
    {
      "matchPackagePatterns": [
        "org.jetbrains.kotlinx.kover"
      ],
      "groupName": "plugin jetbrains-kotlinx-kover"
    },
    {
      "matchPackagePatterns": [
        "app.cash.sqldelight"
      ],
      "groupName": "SqlDelight"
    },
    {
      "matchPackagePatterns": [
        "org.sonarsource.scanner.gradle",
        "org.sonarqube"
      ],
      "groupName": "SonarQube"
    }
  ],
  "prConcurrentLimit": 2
}
